<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="omut.javafx.apps.controllers.Base64EncoderDecoderController">

    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Exit" onAction="#onExit"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About" onAction="#onAbout"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <HBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Input"/>
                    <TextArea fx:id="inputArea" promptText="Input text or Base64 here..."
                              wrapText="true" VBox.vgrow="ALWAYS"/>
                </children>
            </VBox>

            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Result"/>
                    <TextArea fx:id="outputArea" promptText="Result..."
                              wrapText="true" editable="false" VBox.vgrow="ALWAYS"/>
                </children>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="8" BorderPane.alignment="CENTER">
            <padding><Insets top="8" bottom="8"/></padding>

            <Button text="Encode → Base64" onAction="#encodeInput"/>
            <Button text="Decode ← Base64" onAction="#decodeInput"/>
            <Button text="Swap" onAction="#swapAreas"/>
            <Button text="Copy result" onAction="#copyOutput"/>
            <Button text="Clear all" onAction="#clearAll"/>

        </HBox>
    </bottom>

</BorderPane>